<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/linearlayout1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/border"
            android:id="@+id/questionNumberTextView" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:textSize="45sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:background="@drawable/border"
            android:id="@+id/questionTextView" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Answers"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:id="@+id/userResponseTextView" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="20dp"
        android:id="@+id/linearlayout2">

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/a1_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            fancy:fb_borderColor="@android:color/black"
            fancy:fb_borderWidth="2dp"
            fancy:fb_defaultColor="@android:color/holo_orange_light"
            fancy:fb_focusColor="@android:color/black"
            fancy:fb_radius="5dp"
            fancy:fb_text="Answer 1"
            fancy:fb_textSize="20sp"
            fancy:fb_textColor="#FFFFFF"
            />
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/a2_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            fancy:fb_borderColor="@android:color/black"
            fancy:fb_borderWidth="2dp"
            fancy:fb_defaultColor="@android:color/holo_orange_light"
            fancy:fb_focusColor="@android:color/black"
            fancy:fb_radius="5dp"
            fancy:fb_text="Answer 2"
            fancy:fb_textSize="20sp"
            fancy:fb_textColor="#FFFFFF"
            />
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/a3_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            fancy:fb_borderColor="@android:color/black"
            fancy:fb_borderWidth="2dp"
            fancy:fb_defaultColor="@android:color/holo_orange_light"
            fancy:fb_focusColor="@android:color/black"
            fancy:fb_radius="5dp"
            fancy:fb_text="Answer 3"
            fancy:fb_textSize="20sp"
            fancy:fb_textColor="#FFFFFF"
            />
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/a4_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            fancy:fb_borderColor="@android:color/black"
            fancy:fb_borderWidth="2dp"
            fancy:fb_defaultColor="@android:color/holo_orange_light"
            fancy:fb_focusColor="@android:color/black"
            fancy:fb_radius="5dp"
            fancy:fb_text="Answer 4"
            fancy:fb_textSize="20sp"
            fancy:fb_textColor="#FFFFFF"
            />
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/a5_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            fancy:fb_borderColor="@android:color/black"
            fancy:fb_borderWidth="2dp"
            fancy:fb_defaultColor="@android:color/holo_orange_light"
            fancy:fb_focusColor="@android:color/black"
            fancy:fb_radius="5dp"
            fancy:fb_text="Answer 5"
            fancy:fb_textSize="20sp"
            fancy:fb_textColor="#FFFFFF"
            />

    </LinearLayout>

</LinearLayout>