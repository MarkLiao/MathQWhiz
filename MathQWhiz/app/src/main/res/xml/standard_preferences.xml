<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:entries="@array/Standard_GameMode"
        android:entryValues="@array/Standard_GameMode"
        android:key="standard_pref_mode"
        android:title="@string/Difficulty"
        android:summary="@string/game_difficulties"
        android:persistent="true"
        android:defaultValue="Normal"/>

    <MultiSelectListPreference
        android:entries="@array/Standard_number_list"
        android:entryValues="@array/Standard_number_list"
        android:key="standard_pref_numbers"
        android:title="Numbers"
        android:summary="Numbers to include: 1 - 20"
        android:persistent="true"
        android:defaultValue="@array/standard_default_numbers"/>

    <MultiSelectListPreference
        android:entries="@array/standard_operation_list"
        android:entryValues="@array/standard_operation_list"
        android:key="standard_pref_operations"
        android:title="Operations"
        android:summary="Math operations to include"
        android:persistent="true"
        android:defaultValue="@array/standard_default_operation"/>

</PreferenceScreen>